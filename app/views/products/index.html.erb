<%= flash[:notice] %>
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Productos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

  </head>
  <body>
   <div class="container" id="crear_boton">
    <% if current_user.nil?%>
    <nav class="navbar navbar-expand-lg" style="margin-left: 15%;">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="nav justify-content-center">
            <li class="nav-item">
              <%= link_to "Inicio", products_path, class:"nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Descargar Productos", products_path, class:"nav-link"%>
            </li>
            <li>
                <%= link_to('Iniciar Sesion',  new_user_session_path, class:"nav-link")%>
            </li>
            <li>
                <%= link_to('Crear Cuenta',  new_user_registration_path, class:"nav-link")%>
            </li>
        </ul>
      <form class="form-inline">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>
        
          <h1 class='text-center'>Bienvenido</h1>
          <br>
          <div class="container">
              <table class="table" style="text-align: center;">
                <thead>
                <tr>
                  <th>Indice</th>
                  <th>Nombre</th>
                  <th>Marca</th>
                  <th>Precio</th>
                  <th>Cantidad</th>
                </tr>
                </thead>
                <tbody>
                     <% @products.each_with_index do |product, index| %>
                       <tr>
                         <td><%= index %></td>
                         <td><%= product.name %></td>
                         <td><%= product.brand %></td>
                         <td><%= product.price %></td>
                         <td><%= product.quantity %></td>
                       </tr>
                     <% end %>
                 </tbody>
        </table>
    </div>
  </div>

  <% else %>

  <div class="container">
    <nav class="navbar navbar-expand-lg" style="margin-left: 10%">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="nav justify-content-center">
        <li class="nav-item">
              <%= link_to "Inicio", products_path, class:"nav-link"%>
            </li>
             <li class="nav-item">
             <%= link_to "Crear", new_product_path, class:"nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Descargar Productos", products_path, class:"nav-link"%>
            </li>
            <li>
                <%= link_to('Subir Archivos',  import_path, class:"nav-link")%>
            </li>
            <li>
                <%= link_to('Cerrar Session',  destroy_user_session_path, :method => 'delete', class:"nav-link")%>
            </li>
        </ul>    

      <form class="form-inline">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>
    <h1 class='text-center'>Bienvenido <%= current_user.email %> </h1>
    
    <br><br>

     <div class="container">
              <table class="table" style="text-align: center;">
                <thead>
                <tr>
                  <th>Indice</th>
                  <th>Nombre</th>
                  <th>Marca</th>
                  <th>Precio</th>
                  <th>Cantidad</th>
                  <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                     <% @products.each_with_index do |product, index| %>
                       <tr>
                         <td><%= index %></td>
                         <td><%= product.name %></td>
                         <td><%= product.brand %></td>
                         <td><%= product.price %></td>
                         <td><%= product.quantity %></td>
                         <td><%= link_to "Editar", edit_product_path(product), class:"btn btn-outline-primary"%>
                          <%= link_to "Eliminar", product, method: :delete, class:"btn btn-outline-danger" %>
                             </td>
                       </tr>
                     <% end %>
                 </tbody>
        </table>
    </div>
  </div>
  <% end %>

  
  </body>
</html>
